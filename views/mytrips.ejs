<%- include('header')%>

    <!-- main -->
    <div class="container-fluid main">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <p class="text-white h4 text-left">My tickets:</p>

            <!-- table -->
            <div class="table-responsive">
              <table class="table table-hover bg-light">
                <thead>
                  <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Journey</th>
                    <th scope="col">Departure time</th>
                    <th scope="col">Price</th>
                  </tr>
                </thead>
                <tbody>
                  <% trips.forEach(trip => {%>
                  <tr>
                    <td><%= prettyDate(trip.date) %></td>
                    <td><%= trip.departure %>/<%= trip.arrival %></td>
                    <td><%= trip.departureTime %></td>
                    <td>â‚¬<%= trip.price %></td>
                  </tr>
                <% }) %>
                </tbody>
            </table>
            </div>
            
              
            <!-- table -->

          </div>
          <div class="col-12">
            <div class="d-flex justify-content-center"><a class="text-danger"><u>back to search page</u></a></div></div>
          </div>
      </div>
    </div>
    <!-- end main -->

