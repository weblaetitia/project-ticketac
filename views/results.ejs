<%- include('header')%>

    <!-- main -->
    <div class="container-fluid main">
      <div class="container">
        <div class="row">
          <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
            <p class="text-white h4 text-center">Tickets available on <%= prettyDate(journeys[0].date)%>:</p>

            <!-- boucle card -->
            <% journeys.forEach(journey => { %>
            <div class="card d-flex mb-2 flex-sm-row justify-content-between align-items-center p-3">
                <p class="my-2 my-sm-0 font-weight-bold"><%= journey.departure %>/<%= journey.arrival %></p>
                <p class="small mb-0">Train departure at: <%= journey.departureTime %></p>
                <div class="mt-2 my-sm-0">
                    <span class="font-weight-bold mr-2">â‚¬<%= journey.price %></span>
                    <a href="/trains/cart?departure=<%= journey.departure %>&arrival=<%= journey.arrival %>&date=<%= journey.date %>&departuretime=<%= journey.departureTime %>&price=<%= journey.price %>" class="btn btn-danger">OK</a>
                </div>
            </div>
            <% }) %>
            <!-- boucle card -->
            <div class="d-flex justify-content-center"><a href="/search" class="text-danger"><u>back to search page</u></a></div>
          </div>
        </div>
      </div>
    </div>
    <!-- end main -->

    <%- include('footer')%>